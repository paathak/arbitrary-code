<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch_home" onVolumeUp="volume_up" onVolumeDown="volume_down" onResume="play_pause" onPause="pause" color="#000000">
    <grid>
        <row>
            <button text="Sleep" onTap="sleep" />
            <button text="close" onTap="close_app" />
            <button text="Shutdown" onTap="shutdown" />
        </row>
        <row>
            <button icon="docnew" onTap="new_tab" />
            <button icon="web" onTap="address" />
            <button icon="docclose" onTap="close_tab" />
        </row>
        <row>
              <button icon="rwd" onTap="rewind" />
              <button icon="playpause" onTap="play_pause" />
              <button icon="ff" onTap="forward" />
        </row>        
        <row weight="4" color="#D3D3D3">
            <touch id="touch" 
                 ondown="down"
                 onup="up" 
                 onhold="hold"
                 ontap="tap"
                 ondoubletap="double"
                 ontouchdelta="delta"
                 text="Touch!" /> 
        </row>

        <row weight="wrap" color="#808080">
            <button text="L" ontap="left" />
            <button text="R" ontap="right" />
        </row>

          <row>
            <button icon="vup" onTap="volume_up" />
            <button text="Home" onTap="launch_home" />
            <button icon="up" onTap="scroll_up" />
          </row>
          <row>
            <button icon="vdown" onTap="volume_down" />
            <button icon="vmute" onTap="volume_mute" />
            <button icon="down" onTap="scroll_down" />
          </row>
          <row>
              <button icon="fullscreen" onTap="fullscreen" />
              <button text="Esc" onTap="window" />
              <!--<button text="PgUp" onTap="pg_up" />
              <button text="PgDn" onTap="pg_down" />-->
          </row>

    </grid>


</layout>
